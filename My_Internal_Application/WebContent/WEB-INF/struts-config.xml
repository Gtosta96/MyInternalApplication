<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
	   <form-bean name="StrutsForm" 
		type="br.com.struts.form.StrutsForm"/>
	</form-beans>

	<action-mappings>
	   <action path="/home"
		type="br.com.struts.action.StrutsAction"
		name="StrutsForm">
		<forward name="success" path="/successForward.jsp"/>
		<forward name="error" path="/successForward.jsp"/>
	   </action>
	   
	</action-mappings>
</struts-config>